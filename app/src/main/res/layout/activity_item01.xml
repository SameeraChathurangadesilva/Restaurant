<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item01">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Restaurant"
            android:textStyle="bold"
            android:textColor="@color/Material02"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/Gridlayout"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <!--Row-01-->

            <!--<colum-01>-->
            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/strawberry" />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_below="@id/item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Chicken Bacon"
                        android:textColor="@color/Material02"
                        android:textSize="10dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/item_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pan"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PP"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/PPprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/Mprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/Lprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/btnAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/Material01"
                            android:textColor="@color/Material03"
                            android:text="ADD"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--<colum-02>-->
            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/strawberry" />

                    <TextView
                        android:id="@+id/item_name2"
                        android:layout_below="@id/item_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Restaurant"
                        android:textColor="@color/Material02"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/item_size2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pan"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="PP"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="M"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="L"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/Material02"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300.00"
                            android:textColor="@color/Material02"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/Material01"
                            android:text="ADD"
                            android:textColor="@color/Material03"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </GridLayout>

    </ScrollView>

</RelativeLayout>