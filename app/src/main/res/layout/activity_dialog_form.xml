<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogForm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/PPprice"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ppsize"
                android:backgroundTint="@color/Material01"
                />

            <RadioButton
                android:id="@+id/Mprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/PPprice"
                android:text="@string/msize"
                android:backgroundTint="@color/Material01"/>
            <RadioButton
                android:id="@+id/Lprice"
                android:layout_below="@id/Mprice"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msize"
                android:backgroundTint="@color/Material01"
                />

        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textColor="@color/Material02"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/qty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="qty"
            android:inputType="number"
            android:backgroundTint="@color/Material03"
            android:singleLine="true"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/ok"
            android:background="@color/Material01"
            android:textColor="@color/Material03"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</RelativeLayout>